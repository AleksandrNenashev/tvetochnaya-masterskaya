{% if _context.column_left is defined %}
    {# ВАРИАНТ ДЛЯ САЙДБАРА (компактный, всегда по одной) #}
    <div class="row sidebar-categories">
        {% for category in categories %}
            <div class="category-layout col-xl-12 col-lg-12 col-md-6 col-sm-6 col-12">
                <div class="category-thumb sidebar-thumb">
                    <div class="category-image">
                        <a href="{{ category.href }}">
                            <img src="{{ category.image }}" alt="{{ category.name }}" title="{{ category.name }}" class="img-responsive" />
                        </a>
                    </div>
                    <div class="category-caption">
                        <h4><a href="{{ category.href }}">{{ category.name }}</a></h4>

                        {% if category.children %}
                            <div class="category-children">
                                {% for child in category.children|slice(0, 2) %}
                                    <a href="{{ child.href }}" class="child-category">
                                        <img src="{{ child.image }}" alt="{{ child.name }}" class="child-image" />
                                        <span class="child-name">{{ child.name }}</span>
                                    </a>
                                {% endfor %}
                                {% if category.children|length > 2 %}
                                    <div class="more-children">
                                        <a href="{{ category.href }}">+{{ category.children|length - 2 }} more</a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Переносы рядов для планшетов #}
            {% if loop.index % 2 == 0 %}
                <div class="w-100 d-none d-sm-block d-md-none"></div>
            {% endif %}
        {% endfor %}
    </div>
{% else %}
    {# ВАРИАНТ ДЛЯ ГЛАВНОЙ СТРАНИЦЫ (3 в ряд) #}
    <div class="row main-categories">
    {% for category in categories %}
        <div class="category-layout col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12">
            <div class="category-thumb main-thumb">
                <div class="category-image">
                    <a href="{{ category.href }}">
                        <img src="{{ category.image }}" alt="{{ category.name }}" title="{{ category.name }}" class="img-responsive" />
                    </a>
                </div>
                <div class="category-caption">
                    <h4><a href="{{ category.href }}">{{ category.name }}</a></h4>

                    {% if category.children %}
                        <div class="category-children">
                            {% for child in category.children|slice(0, 3) %}
                                <a href="{{ child.href }}" class="child-category">
                                    <img src="{{ child.image }}" alt="{{ child.name }}" class="child-image" />
                                    <span class="child-name">{{ child.name }}</span>
                                </a>
                            {% endfor %}
                            {% if category.children|length > 3 %}
                                <div class="more-children">
                                    <a href="{{ category.href }}">+{{ category.children|length - 3 }} more</a>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Переносы рядов для десктопа #}
        {% if loop.index % 3 == 0 and not loop.last %}
            </div><div class="row main-categories">
        {% endif %}
    {% endfor %}
    </div>
{% endif %}

