{% if categories %}
<div id="menu-full">
<div class="container">
    <nav id="menu" class="navbar">
        <div class="navbar-header"><span id="category" class="visible-xs">{{ text_category }}</span>
          <button type="button" class="btn btn-navbar navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse"><i class="fa fa-bars"></i></button>
        </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    {% for category in categories %}
                    {% if category.children %}
                    <li class="dropdown"><a href="{{ category.href }}" class="dropdown-toggle" data-toggle="dropdown">{{ category.name }}<i class="fa fa-plus visible-xs"></i></a>
                        <div class="dropdown-menu">
                            <div class="dropdown-inner"> {% for children in category.children|batch(category.children|length / category.column|round(1, 'ceil')) %}
                                {% for child in children %}
                                	{% if child.subchildren %}
                                	    <ul class="childsub list-unstyled">
                                    		<li class="childsub"><a href="{{ child.href }}">{{ child.name }}</a>
                                    			<ul class="list-unstyled">
                                    				{% for subchild in child.subchildren %}
                                                    	<li class="subchild hidden-xs"><a href="{{ subchild.href }}">{{ subchild.name }}</a></li>
                                                    {% endfor %}
                                    			</ul>
                                    		</li>
                                		</ul>
                                	{% else %}
                                	    <ul class="child list-unstyled">
                                		    <li class="child"><a href="{{ child.href }}">{{ child.name }}</a></li>
                                		</ul>
                                	{% endif %}
                                {% endfor %}
                            {% endfor %}
                            </div>
                        </div>
                    </li>
                    {% else %}
                    <li><a href="{{ category.href }}">{{ category.name }}</a></li>
                    {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
</div>
</div>
{% endif %}
